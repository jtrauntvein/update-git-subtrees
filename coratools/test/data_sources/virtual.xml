<test>
  <sources>
    <source name="virtual" type="virtual">
      <settings refresh-interval="15000">
        <fields>
          <field name="pi" value="pi"/>
          <field name="twopi" value="2*pi"/>
          <field name="string" value="FormatFloat(2 * pi, $&quot;%.7f&quot;)"/>
          <field name="today" value="SystemTime()"/>
          <field name="temp_degf" value="10"/>
        </fields>
      </settings>
          
    </source>
  </sources>

  <requests/>
  <expressions>
    <expression>AvgRun(virtual:values.temp_degf, 10)</expression>
    <expression>
      alias(value, "virtual:values.temp_degf");
      TotalOverTimeWithReset(
        value,
        timestamp(value),
        RESET_CUSTOM,
        timestamp(value) MOD nsecPerMin = 0)
    </expression>
  </expressions>
</test>
